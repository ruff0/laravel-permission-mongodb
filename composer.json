{
    "name": "ruff0/laravel-permission-mongodb",
    "description": "Permission handling for Laravel 10 and up using mongodb",
    "version": "dev-master",
    "keywords": [
        "laravel",
        "security",
        "mongodb",
        "permission",
        "acl",
        "ruff0",
        "spatie"
    ],
    "homepage": "https://github.com/ruff0/laravel-permission-mongodb",
    "license": "MIT",
    "authors": [
        {
            "name": "ruff0",
            "email": "ruff0@400tres.com",
            "homepage": "https://github.com/ruff0",
            "role": "Developer"
        },
        {
          "name": "Mostafa Maklad",
          "email": "dev.mostafa.maklad@gmail.com",
          "homepage": "https://github.com/mostafamaklad",
            "role": "The original module"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/auth": "^10.0",
        "illuminate/container": "^10.0",
        "illuminate/contracts": "^10.0",
        "mongodb/laravel-mongodb": "^4.6"
    },
    "require-dev": {
        "monolog/monolog": "^3.2",
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Ruff0\\Permission\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ruff0\\Permission\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs --standard=psr2 src/",
        "fix-style": "phpcbf --standard=psr2 src/"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ruff0\\Permission\\PermissionServiceProvider"
            ]
        }
    }
}
